<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/underbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#87bee8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="290dp">

        <ImageView
            android:id="@+id/go_home"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/icon_home"
            android:onClick="selectCategory" />

        <ImageView
            android:id="@+id/go_follow"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="48dp"
            android:layout_toEndOf="@+id/go_home"
            android:background="@drawable/follow"
            android:onClick="selectCategory" />

        <ImageView
            android:id="@+id/go_shop"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="48dp"
            android:layout_toLeftOf="@id/go_mymenu"
            android:background="@drawable/cart_white"
            android:onClick="selectCategory" />

        <ImageView
            android:id="@+id/go_mymenu"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/icon_perm_identity_rounded"
            android:onClick="selectCategory" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>