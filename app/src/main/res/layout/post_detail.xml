<?xml version="1.0" encoding="utf-8"?>
<!--<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<!--    xmlns:app="http://schemas.android.com/apk/res-auto"-->
<!--    xmlns:tools="http://schemas.android.com/tools"-->
<!--    android:id="@+id/drawer_layout"-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent">-->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/action_bar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/user_add_follow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/other_people_page"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/picture_post"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:background="@drawable/profile_circle" />

                                    <TextView
                                        android:id="@+id/dp_user_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="50dp"
                                        android:gravity="left"
                                        android:letterSpacing="0.06"
                                        android:lineSpacingExtra="5sp"
                                        android:text="@string/hint_user_id"
                                        android:textColor="#707070"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/post_follow_Frame"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical">

                                    <Switch
                                        android:id="@+id/follow_switch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:showText="false"
                                        android:switchMinWidth="130dp"
                                        android:textOff="follow"
                                        android:textOn="unfollow"
                                        android:thumb="@drawable/switch_thumb"
                                        android:track="@drawable/switch_track_selector"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/follow_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="50dp"
                                        android:fontFamily="@font/norwester"
                                        android:text="follow"
                                        android:textColor="#ffffff"
                                        android:textSize="20dp"
                                        android:visibility="invisible" />

                                    <TextView
                                        android:id="@+id/unfollow_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="7dp"
                                        android:fontFamily="@font/norwester"
                                        android:text="unfollow"
                                        android:textColor="#ffffff"
                                        android:textSize="20dp"
                                        android:visibility="visible" />


                                    <Button
                                        android:id="@+id/delete_btn"
                                        android:layout_width="60dp"
                                        android:layout_height="45dp"
                                        android:layout_marginEnd="5dp"
                                        android:layout_toLeftOf="@id/edit_btn"
                                        android:background="@drawable/delete"
                                        android:fontFamily="@font/gyeonggititle_medium"
                                        android:text="삭제"
                                        android:textColor="#ffffff"
                                        android:onClick="deletePostAffirm"
                                        android:textSize="20sp"
                                        android:visibility="gone" />

                                    <Button
                                        android:id="@+id/edit_btn"
                                        android:layout_width="60dp"
                                        android:layout_height="45dp"
                                        android:layout_alignParentEnd="true"
                                        android:background="@drawable/edit_box"
                                        android:fontFamily="@font/gyeonggititle_medium"
                                        android:text="수정"
                                        android:textColor="#ffffff"
                                        android:textSize="20sp"
                                        android:visibility="gone" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/image_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_add_follow"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="10dp">

                                <ImageView
                                    android:id="@+id/dp_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:duplicateParentState="false"
                                    android:scaleType="matrix"
                                    android:adjustViewBounds="true"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/btn_like"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/like" />

                                <TextView
                                    android:id="@+id/post_like_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_toRightOf="@+id/btn_like"
                                    android:gravity="start"
                                    android:lineSpacingExtra="1.5sp"
                                    android:text=""
                                    android:textColor="#bbbccd"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/btn_comment"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="10dp"
                                    android:layout_toRightOf="@+id/post_like_count"
                                    android:onClick="onClickLike"
                                    app:srcCompat="@drawable/comment" />

                                <TextView
                                    android:id="@+id/post_commet_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="30dp"
                                    android:layout_toRightOf="@id/btn_comment"
                                    android:gravity="start"
                                    android:lineSpacingExtra="1.5sp"
                                    android:text=""
                                    android:textColor="#bbbccd"
                                    android:textSize="20sp" />

                                <RatingBar
                                    android:id="@+id/star_evaluation"
                                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="false"
                                    android:layout_toLeftOf="@+id/post_star_evaluation"
                                    android:numStars="5"
                                    android:rating="3"
                                    android:stepSize="0.5"
                                    tools:layout_centerVertical="true" />

                                <TextView
                                    android:id="@+id/post_star_evaluation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:text="5.0점"
                                    android:textSize="20sp" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/dp_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="title"
                                    android:textColor="#707070"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp">

                                    <TextView
                                        android:id="@+id/price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/size"
                                        android:gravity="center_vertical"
                                        android:text="구매가격"
                                        android:textColor="#707070"
                                        android:textSize="16sp"
                                        android:textStyle="normal" />


                                    <TextView
                                        android:id="@+id/size"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/dp_posted_time"
                                        android:layout_marginBottom="5dp"
                                        android:text="구매 사이즈"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/dp_posted_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="Time"
                                        android:textAlignment="textEnd" />

                                    <FrameLayout
                                        android:id="@+id/where_to_buy_layout"
                                        android:layout_width="125dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentEnd="true"
                                        android:background="@drawable/switch_track_unfollow">

                                        <Button
                                            android:id="@+id/where_to_buy"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_gravity="right"
                                            android:background="@null"
                                            android:fontFamily="@font/gyeonggititle_bold"
                                            android:text="구입처   "
                                            android:textColor="#ffffff" />

                                        <View
                                            android:layout_width="10dp"
                                            android:layout_height="16dp"
                                            android:layout_gravity="right|center_vertical"
                                            android:layout_marginEnd="10dp"
                                            android:background="@drawable/right_button" />
                                    </FrameLayout>

                                    <RelativeLayout
                                        android:id="@+id/cart_like_btn"
                                        android:layout_width="125dp"
                                        android:layout_height="30dp"
                                        android:layout_below="@id/where_to_buy_layout"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/switch_track_unfollow">

                                        <View
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginEnd="10dp"
                                            android:background="@drawable/cart_white" />

                                        <Button
                                            android:id="@+id/post_detail_cart"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentEnd="true"
                                            android:layout_gravity="right"
                                            android:layout_marginEnd="30dp"
                                            android:background="@null"
                                            android:fontFamily="@font/gyeonggititle_bold"
                                            android:text="상품 보러가기"
                                            android:textColor="#ffffff" />


                                    </RelativeLayout>
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/detail_review_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="37.5dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@drawable/review_box"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left|center_vertical"
                                            android:layout_marginStart="15.5dp"
                                            android:fontFamily="@font/gyeonggititle_medium"
                                            android:text="상세 리뷰 보기"
                                            android:textColor="#FFFFFF"
                                            android:textSize="16sp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="right|center_vertical">

                                            <ToggleButton
                                                android:id="@+id/review_watch_btn"
                                                android:layout_width="14dp"
                                                android:layout_height="6dp"
                                                android:layout_marginEnd="30dp"
                                                android:background="@drawable/up_down" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/review_check_feature_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:visibility="visible">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="7.5dp"
                                            android:layout_marginEnd="7.5dp"
                                            android:gravity="center_vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:text="신발 무게"
                                                android:textSize="14sp"
                                                android:textStyle="bold" />

                                            <RadioGroup
                                                android:id="@+id/shoes_weight"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:orientation="horizontal">

                                                <RadioButton
                                                    android:id="@+id/shoes_weight_heavy"
                                                    android:layout_width="72dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:enabled="false"
                                                    android:text="무겁다"
                                                    android:textSize="14sp" />

                                                <RadioButton
                                                    android:id="@+id/shoes_weight_fit"
                                                    android:layout_width="85dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:enabled="false"
                                                    android:text="적당하다"
                                                    android:textSize="14sp" />

                                                <RadioButton
                                                    android:id="@+id/shoes_weight_light"
                                                    android:layout_width="72dp"
                                                    android:layout_height="wrap_content"
                                                    android:enabled="false"
                                                    android:text="가볍다"
                                                    android:textSize="14sp" />
                                            </RadioGroup>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="7.5dp"
                                            android:layout_marginEnd="7.5dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                android:text="신발 사이즈"
                                                android:textSize="14sp"
                                                android:textStyle="bold" />

                                            <RadioGroup
                                                android:id="@+id/shoes_size"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:orientation="horizontal">

                                                <RadioButton
                                                    android:id="@+id/shoes_size_big"
                                                    android:layout_width="72dp"
                                                    android:layout_height="wrap_content"
                                                    android:enabled="false"

                                                    android:text="크다"
                                                    android:textSize="14sp" />

                                                <RadioButton
                                                    android:id="@+id/shoes_size_fit"
                                                    android:layout_width="85dp"
                                                    android:layout_height="wrap_content"
                                                    android:enabled="false"
                                                    android:text="적당하다"
                                                    android:textSize="14sp" />

                                                <RadioButton
                                                    android:id="@+id/shoes_size_small"
                                                    android:layout_width="72dp"
                                                    android:layout_height="wrap_content"
                                                    android:enabled="false"
                                                    android:text="작다"
                                                    android:textSize="14sp" />
                                            </RadioGroup>
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="7.5dp"
                                            android:layout_marginEnd="7.5dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                android:text="통풍"
                                                android:textSize="14sp"
                                                android:textStyle="bold" />

                                            <RadioGroup
                                                android:id="@+id/ventilation"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:orientation="horizontal">

                                                <RadioButton
                                                    android:id="@+id/ventilation_best"
                                                    android:layout_width="72dp"
                                                    android:layout_height="wrap_content"
                                                    android:enabled="false"
                                                    android:text="잘된다"
                                                    android:textSize="14sp" />

                                                <RadioButton
                                                    android:id="@+id/ventilation_good"
                                                    android:layout_width="85dp"
                                                    android:layout_height="wrap_content"
                                                    android:enabled="false"
                                                    android:text="적당하다"
                                                    android:textSize="14sp" />

                                                <RadioButton
                                                    android:id="@+id/ventilation_bad"
                                                    android:layout_width="72dp"
                                                    android:layout_height="wrap_content"
                                                    android:enabled="false"
                                                    android:text="안된다"
                                                    android:textSize="14sp" />
                                            </RadioGroup>
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/activity_posting_waterproof_layout"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="7.5dp"
                                            android:layout_marginEnd="7.5dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="방수"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                tools:layout_centerVertical="true" />

                                            <RadioGroup
                                                android:id="@+id/waterproof"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:orientation="horizontal">

                                                <RadioButton
                                                    android:id="@+id/waterproof_best"
                                                    android:layout_width="72dp"
                                                    android:layout_height="wrap_content"
                                                    android:enabled="false"
                                                    android:text="잘된다"
                                                    android:textSize="14sp" />

                                                <RadioButton
                                                    android:id="@+id/waterproof_good"
                                                    android:layout_width="85dp"
                                                    android:layout_height="wrap_content"
                                                    android:enabled="false"
                                                    android:text="적당하다"
                                                    android:textSize="14sp" />

                                                <RadioButton
                                                    android:id="@+id/waterproof_bad"
                                                    android:layout_width="72dp"
                                                    android:layout_height="wrap_content"
                                                    android:enabled="false"
                                                    android:text="안된다"
                                                    android:textSize="14sp" />
                                            </RadioGroup>

                                        </RelativeLayout>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/review_layout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="37.5dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/review_box"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="15.5dp"
                                        android:fontFamily="@font/gyeonggititle_medium"
                                        android:text="리뷰 보기"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="right|center_vertical">

                                        <ToggleButton
                                            android:id="@+id/review_write_watch_btn"
                                            android:layout_width="14dp"
                                            android:layout_height="6dp"
                                            android:layout_marginEnd="30dp"
                                            android:background="@drawable/up_down" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/review_write_textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:visibility="visible">

                                    <TextView
                                        android:id="@+id/dp_body"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:text="body"
                                        android:textColor="#707070"
                                        android:textSize="16sp"
                                        android:textStyle="normal" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/input_comment_context"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="댓글 쓰기"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btn_comment_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_box"
                            android:fontFamily="@font/gyeonggititle_medium"
                            android:letterSpacing="0.1"
                            android:onClick="onClickwriteComment"
                            android:text="입력"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/list_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:divider="@null">


                    </ListView>

                </LinearLayout>
            </ScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

<!--    <include layout="@layout/activity_drawer" />-->


<!--</androidx.drawerlayout.widget.DrawerLayout>-->
