<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/user_add_follow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="24.5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/picture_post"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/profile_circle" />

                                <TextView
                                    android:id="@+id/dp_user_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="50dp"
                                    android:layout_weight="6"
                                    android:gravity="left"
                                    android:letterSpacing="0.06"
                                    android:lineSpacingExtra="5sp"
                                    android:text="@string/hint_user_id"
                                    android:textColor="#707070"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:id="@+id/post_follow_Frame"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2">
                                    <Switch
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Follow"/>

                                    <!--<ImageView-->
                                        <!--android:id="@+id/post_follow_bar"-->
                                        <!--android:layout_width="94dp"-->
                                        <!--android:layout_height="33.5dp"-->
                                        <!--android:layout_centerInParent="true"-->
                                        <!--android:background="@drawable/follow_bar" />-->

                                    <!--<TextView-->
                                        <!--android:id="@+id/post_follow"-->
                                        <!--android:layout_width="wrap_content"-->
                                        <!--android:layout_height="wrap_content"-->
                                        <!--android:layout_alignLeft="@+id/post_follow_bar"-->
                                        <!--android:layout_centerInParent="true"-->
                                        <!--android:layout_marginStart="13dp"-->
                                        <!--android:letterSpacing="0.06"-->
                                        <!--android:lineSpacingExtra="4sp"-->
                                        <!--android:text="follow"-->
                                        <!--android:textColor="#ffffff"-->
                                        <!--android:textSize="15dp" />-->

                                    <!--<ImageView-->
                                        <!--android:id="@+id/follow_circle"-->
                                        <!--android:layout_width="29.8dp"-->
                                        <!--android:layout_height="29.8dp"-->
                                        <!--android:layout_alignRight="@+id/post_follow_bar"-->
                                        <!--android:layout_centerInParent="true"-->
                                        <!--android:background="@drawable/follow_circle" />-->
                                </RelativeLayout>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/dp_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:visibility="gone"
                                />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/btn_commet"
                                    android:layout_width="20dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/commet"
                                    />

                                <TextView
                                    android:id="@+id/post_commet_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:textSize="15sp"
                                    android:textColor="#bbbccd"
                                    android:lineSpacingExtra="1.5sp"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/btn_commet"
                                    android:gravity="start"
                                    android:text="256"
                                    />

                                <ImageView
                                    android:id="@+id/btn_like"
                                    android:layout_width="20dp"
                                    android:layout_height="30dp"
                                    android:layout_toRightOf="@+id/post_commet_count"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginStart="5dp"
                                    android:onClick="onClickLike"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/like" />

                                <TextView
                                    android:id="@+id/post_like_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:textSize="15sp"
                                    android:textColor="#bbbccd"
                                    android:lineSpacingExtra="1.5sp"
                                    android:layout_centerVertical="true"
                                    android:gravity="start"
                                    android:layout_toRightOf="@+id/btn_like"
                                    android:text="256"
                                    />

                                <ImageView
                                    android:id="@+id/btn_cart"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_toRightOf="@+id/post_like_count"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/cart"/>

                                <TextView
                                    android:id="@+id/post_cart_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="30dp"
                                    android:textSize="15sp"
                                    android:textColor="#bbbccd"
                                    android:lineSpacingExtra="1.5sp"
                                    android:layout_centerVertical="true"
                                    android:gravity="start"
                                    android:layout_toRightOf="@+id/btn_cart"
                                    android:text="256"/>





                                <RatingBar
                                    android:id="@+id/star_evaluation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:rating="3"
                                    android:stepSize="0.5"
                                    android:layout_centerVertical="true"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_toLeftOf="@+id/post_star_evaluation"
                                    />

                                <TextView
                                    android:id="@+id/post_star_evaluation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toLeftOf="@+id/dp_posted_time"
                                    android:layout_centerVertical="true"
                                    android:text="5.0점"
                                    />

                                <TextView
                                    android:id="@+id/dp_posted_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:text="Time"
                                    android:textAlignment="textEnd"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/dp_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="title"
                                android:textColor="#707070"
                                android:textSize="18sp"
                                android:textStyle="normal" />
                            <TextView
                                android:id="@+id/dp_body"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="body"
                                android:textColor="#707070"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/input_comment_context"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="댓글 쓰기" />

                        <Button
                            android:id="@+id/btn_comment_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onClickwriteComment"
                            android:text="입력" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/list_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null">


                    </ListView>

                </LinearLayout>
            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <include layout="@layout/activity_drawer" />


</android.support.v4.widget.DrawerLayout>
