<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e8eff5"
        tools:context=".HomeActivities.HomeFeed">

        <include
            android:id="@+id/header"
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout

            android:id="@+id/under"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <include
                layout="@layout/under_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_detail_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_above="@+id/under"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/user_add_follow"
                android:layout_width="321.5dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24.5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/picture_post"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_circle"
                    />

                <TextView
                    android:id="@+id/post_username"
                    android:layout_width="88dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="6"
                    android:gravity="left"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="5sp"
                    android:text="USERNAME"
                    android:textColor="#707070"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/post_follow_Frame"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/post_follow_bar"
                        android:layout_width="94dp"
                        android:layout_height="33.5dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/follow_bar" />

                    <TextView
                        android:id="@+id/post_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/post_follow_bar"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="13dp"
                        android:letterSpacing="0.06"
                        android:lineSpacingExtra="4sp"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        tools:text="follow" />

                    <ImageView
                        android:id="@+id/follow_circle"
                        android:layout_width="29.8dp"
                        android:layout_height="29.8dp"
                        android:layout_alignRight="@+id/post_follow_bar"
                        android:layout_centerInParent="true"
                        android:background="@drawable/follow_circle" />
                </RelativeLayout>
            </LinearLayout>

           <ImageView
               android:id="@+id/post_image"
               android:layout_width="305dp"
               android:layout_height="305dp"
               android:layout_marginTop="20dp"
               />

            <LinearLayout
                android:id="@+id/post_evaluation"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:id="@+id/post_commet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/commet" />

                <TextView
                    android:id="@+id/post_commet_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"
                    android:textColor="#bbbccd"
                    android:lineSpacingExtra="1.5sp"
                    android:gravity="end"
                    tools:text="256"
                    />

                <ImageButton
                    android:id="@+id/like_heart"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/heart"
                    />
                <TextView
                    android:id="@+id/post_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="70dp"
                    android:textSize="15sp"
                    android:textColor="#bbbccd"
                    android:lineSpacingExtra="1.5sp"
                    android:gravity="end"
                    tools:text="256"
                    />

                <ImageView
                    android:id="@+id/post_star1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/star"
                    />

                <ImageView
                    android:id="@+id/post_star2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star"
                    />

                <ImageView
                    android:id="@+id/post_star3"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star"
                    />

                <ImageView
                    android:id="@+id/post_star4"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star"
                    />

                <ImageView
                    android:id="@+id/post_star5"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star"
                    />

                <TextView
                    android:id="@+id/post_star_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5.0점"
                    android:layout_marginEnd="20dp"

                    />





            </LinearLayout>

            <LinearLayout
                android:id="@+id/post_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#707070"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="5sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    tools:text="[converse]윈스타 아카데미 타임캡슐"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/commet_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/commet_background"
                        />

                    <TextView
                        android:id="@+id/commet_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/commet_background"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:letterSpacing="0.06"
                        android:lineSpacingExtra="4sp"
                        android:textColor="#707070"
                        android:textSize="15dp"
                        tools:text="follow" />
                        />
                </RelativeLayout>



            </LinearLayout>


        </LinearLayout>





        <Button
            android:id="@+id/add_post"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignBottom="@+id/under"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/add_post" />


    </RelativeLayout>

    <include layout="@layout/activity_drawer" />
    </android.support.v4.widget.DrawerLayout>