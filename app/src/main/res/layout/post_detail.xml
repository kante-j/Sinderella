<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/user_add_follow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="27.5dp"
                                android:layout_marginTop="24.5dp"
                                android:layout_marginEnd="27.5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/picture_post"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/profile_circle" />

                                <TextView
                                    android:id="@+id/dp_user_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="50dp"
                                    android:layout_weight="6"
                                    android:gravity="left"
                                    android:letterSpacing="0.06"
                                    android:lineSpacingExtra="5sp"
                                    android:text="@string/hint_user_id"
                                    android:textColor="#707070"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:id="@+id/post_follow_Frame"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:gravity="right|center_vertical">

                                    <Switch
                                        android:id="@+id/follow_switch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:showText="false"
                                        android:switchMinWidth="100dp"
                                        android:textOff="follow"
                                        android:textOn="unfollow"
                                        android:thumb="@drawable/switch_thumb"
                                        android:track="@drawable/switch_track_selector" />

                                    <!--<ImageView-->
                                    <!--android:id="@+id/post_follow_bar"-->
                                    <!--android:layout_width="94dp"-->
                                    <!--android:layout_height="33.5dp"-->
                                    <!--android:layout_centerInParent="true"-->
                                    <!--android:background="@drawable/follow_bar" />-->

                                    <!--<TextView-->
                                    <!--android:id="@+id/post_follow"-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:layout_alignLeft="@+id/post_follow_bar"-->
                                    <!--android:layout_centerInParent="true"-->
                                    <!--android:layout_marginStart="13dp"-->
                                    <!--android:letterSpacing="0.06"-->
                                    <!--android:lineSpacingExtra="4sp"-->
                                    <!--android:text="follow"-->
                                    <!--android:textColor="#ffffff"-->
                                    <!--android:textSize="15dp" />-->

                                    <!--<ImageView-->
                                    <!--android:id="@+id/follow_circle"-->
                                    <!--android:layout_width="29.8dp"-->
                                    <!--android:layout_height="29.8dp"-->
                                    <!--android:layout_alignRight="@+id/post_follow_bar"-->
                                    <!--android:layout_centerInParent="true"-->
                                    <!--android:background="@drawable/follow_circle" />-->
                                </RelativeLayout>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/dp_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="28.5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="28.5dp"
                                android:layout_marginBottom="10dp"
                                android:duplicateParentState="false"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/btn_commet"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="27.5dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/comment" />

                                <TextView
                                    android:id="@+id/post_commet_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_toRightOf="@+id/btn_commet"
                                    android:gravity="start"
                                    android:lineSpacingExtra="1.5sp"
                                    android:text=""
                                    android:textColor="#bbbccd"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:id="@+id/btn_like"
                                    android:layout_width="20dp"
                                    android:layout_height="30dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_toRightOf="@+id/post_commet_count"
                                    android:onClick="onClickLike"
                                    app:srcCompat="@drawable/like" />

                                <TextView
                                    android:id="@+id/post_like_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_toRightOf="@+id/btn_like"
                                    android:gravity="start"
                                    android:lineSpacingExtra="1.5sp"
                                    android:text=""
                                    android:textColor="#bbbccd"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:id="@+id/btn_cart"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_toRightOf="@+id/post_like_count"
                                    android:background="@drawable/cart" />

                                <TextView
                                    android:id="@+id/post_cart_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="30dp"
                                    android:layout_toRightOf="@+id/btn_cart"
                                    android:gravity="start"
                                    android:lineSpacingExtra="1.5sp"
                                    android:text=""
                                    android:textColor="#bbbccd"
                                    android:textSize="15sp" />


                                <RatingBar
                                    android:id="@+id/star_evaluation"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/post_star_evaluation"
                                    android:numStars="5"
                                    android:rating="3"
                                    android:stepSize="0.5" />

                                <TextView
                                    android:id="@+id/post_star_evaluation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toLeftOf="@+id/dp_posted_time"
                                    android:text="5.0점" />

                                <TextView
                                    android:id="@+id/dp_posted_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="27.5dp"
                                    android:text="Time"
                                    android:textAlignment="textEnd" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/dp_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="27.5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="27.5dp"
                                    android:layout_marginBottom="13dp"
                                    android:text="title"
                                    android:textColor="#707070"
                                    android:textSize="18sp"
                                    android:textStyle="normal" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="37.5dp"
                                    android:layout_marginStart="27.5dp"
                                    android:layout_marginEnd="27.5dp"
                                    android:gravity="left|center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|center_vertical"
                                        android:layout_marginBottom="13dp"
                                        android:text="구매가격 / 구매 사이즈"
                                        android:textColor="#707070"
                                        android:textSize="16sp"
                                        android:textStyle="normal" />

                                    <Button
                                        android:id="@+id/button"
                                        android:layout_width="60dp"
                                        android:layout_height="37.5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/linkbox"
                                        android:fontFamily="@font/gyeonggititle_medium"
                                        android:text="구입처"
                                        android:textColor="#ffffff"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="37.5dp"
                                        android:layout_marginStart="27.5dp"
                                        android:layout_marginEnd="27.5dp"
                                        android:background="@drawable/review_box"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="200dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="15.5dp"
                                            android:layout_marginEnd="100dp"
                                            android:fontFamily="@font/gyeonggititle_medium"
                                            android:text="상세 리뷰 보기"
                                            android:textColor="#FFFFFF"
                                            android:textSize="16sp" />

                                        <Button
                                            android:layout_width="14dp"
                                            android:layout_height="6dp"
                                            android:layout_gravity="left|center_vertical"
                                            android:layout_marginEnd="15.5dp"
                                            android:background="@drawable/up_button" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="10dp"
                                        android:gravity="left|center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="30.2dp"
                                            android:text="신발 무게"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />

                                        <RadioGroup
                                            android:id="@+id/shoes_weight"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <RadioButton
                                                android:id="@+id/shoes_weight_heavy"
                                                android:layout_width="70dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:enabled="false"
                                                android:text="무겁다"
                                                android:textSize="14sp" />

                                            <RadioButton
                                                android:id="@+id/shoes_weight_fit"
                                                android:layout_width="88dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:enabled="false"
                                                android:text="적당하다"
                                                android:textSize="14sp" />

                                            <RadioButton
                                                android:id="@+id/shoes_weight_light"
                                                android:layout_width="63dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="30.2dp"
                                                android:layout_weight="1"
                                                android:enabled="false"
                                                android:text="가볍다"
                                                android:textSize="14sp" />
                                        </RadioGroup>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="10dp"
                                        android:gravity="left|center_vertical">

                                        <TextView
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="30.2dp"
                                            android:text="신발 사이즈"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />

                                        <RadioGroup
                                            android:id="@+id/shoes_size"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                            <RadioButton
                                                android:id="@+id/shoes_size_big"
                                                android:layout_width="70dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="크다"
                                                android:textSize="14sp" />

                                            <RadioButton
                                                android:id="@+id/shoes_size_fit"
                                                android:layout_width="88dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="적당하다"
                                                android:textSize="14sp" />

                                            <RadioButton
                                                android:id="@+id/shoes_size_small"
                                                android:layout_width="63dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="30.2dp"
                                                android:layout_weight="1"
                                                android:text="작다"
                                                android:textSize="14sp" />
                                        </RadioGroup>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="10dp"
                                        android:gravity="left|center_vertical">

                                        <TextView
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="30.2dp"
                                            android:text="통풍"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />

                                        <RadioGroup
                                            android:id="@+id/ventilation"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                            <RadioButton
                                                android:id="@+id/ventilation_best"
                                                android:layout_width="70dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="잘된다"
                                                android:textSize="14sp" />

                                            <RadioButton
                                                android:id="@+id/ventilation_good"
                                                android:layout_width="88dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="적당하다"
                                                android:textSize="14sp" />

                                            <RadioButton
                                                android:id="@+id/ventilation_bad"
                                                android:layout_width="63dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="30.2dp"
                                                android:layout_weight="1"
                                                android:text="안된다"
                                                android:textSize="14sp" />
                                        </RadioGroup>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/activity_posting_waterproof_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="10dp"
                                        android:gravity="left|center_vertical">

                                        <TextView
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="30.2dp"
                                            android:text="방수"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />

                                        <RadioGroup
                                            android:id="@+id/waterproof"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                            <RadioButton
                                                android:id="@+id/waterproof_best"
                                                android:layout_width="70dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="잘된다"
                                                android:textSize="14sp" />

                                            <RadioButton
                                                android:id="@+id/waterproof_good"
                                                android:layout_width="88dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="적당하다"
                                                android:textSize="14sp" />

                                            <RadioButton
                                                android:id="@+id/waterproof_bad"
                                                android:layout_width="63dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="30.2dp"
                                                android:layout_weight="1"
                                                android:text="안된다"
                                                android:textSize="14sp" />
                                        </RadioGroup>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="37.5dp"
                                    android:layout_marginStart="27.5dp"
                                    android:layout_marginEnd="27.5dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/review_box"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="15.5dp"
                                        android:layout_marginEnd="100dp"
                                        android:fontFamily="@font/gyeonggititle_medium"
                                        android:text="리뷰 보기"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp" />

                                    <Button
                                        android:layout_width="14dp"
                                        android:layout_height="6dp"
                                        android:layout_gravity="left|center_vertical"
                                        android:layout_marginEnd="15.5dp"
                                        android:background="@drawable/up_button" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/dp_body"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="30.2dp"
                                    android:layout_marginEnd="30.2dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="body"
                                    android:textColor="#707070"
                                    android:textSize="16sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/input_comment_context"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="댓글 쓰기" />

                        <Button
                            android:id="@+id/btn_comment_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onClickwriteComment"
                            android:text="입력" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/list_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null">


                    </ListView>

                </LinearLayout>
            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <include layout="@layout/activity_drawer" />


</android.support.v4.widget.DrawerLayout>
