<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="327dp"
    android:layout_height="151dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/mypage_item_feeds_cardview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shoes_Image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shoes_image"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/cart_item_test"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mypage_item_feeds_postedImage"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/shoes_code_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gyeonggititle_medium"
                        android:text="shoesname"
                        android:textColor="#6c6464"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gyeonggititle_medium"
                        android:lineSpacingExtra="3sp"
                        android:text="category"
                        android:textColor="#6c6464"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/buyURL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gyeonggititle_medium"
                        android:lineSpacingExtra="3sp"
                        android:text="buyURL"
                        android:textColor="#6c6464"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gyeonggititle_medium"
                        android:lineSpacingExtra="2sp"
                        android:text="price"
                        android:textColor="#6c6464"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>