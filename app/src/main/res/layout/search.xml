<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_lay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/invisible"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/search_image"
        android:background="@drawable/search_bar"
        android:layout_width="300.5dp"
        android:layout_height="36dp"
        android:layout_marginEnd="29.5dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="536.5dp"
        android:layout_marginTop="67.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:id="@+id/search"
        android:layout_width="300.5dp"
        android:layout_height="36dp"
        android:layout_marginEnd="29.5dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="536.5dp"
        android:layout_marginTop="67.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/searchingText"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="280dp"
        android:layout_marginBottom="536.5dp"
        android:layout_marginTop="67.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/search_blue" />

    <ImageButton
        android:id="@+id/out_button"
        android:layout_width="57.9dp"
        android:layout_height="29dp"
        android:background="@drawable/pass_button"
        android:layout_marginEnd="150.8dp"
        android:layout_marginStart="151.3dp"
        android:layout_marginBottom="128.7dp"
        android:layout_marginTop="482.3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

</android.support.constraint.ConstraintLayout>