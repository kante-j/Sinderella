<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invisible"
    >

    <RelativeLayout
        android:id="@+id/search_Layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/search_page"
        >


        <ImageView
            android:id="@+id/search_image"
            android:layout_width="300.5dp"
            android:layout_height="50dp"
            android:background="@drawable/search_bar"
            android:layout_centerInParent="true"
            />

        <EditText
            android:id="@+id/search"
            android:layout_width="215dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_alignTop="@+id/search_image"
            android:layout_alignBottom="@+id/search_image"

            android:background="@null"

            />

        <ImageView
            android:id="@+id/searching_Image"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/search_blue"
            android:layout_alignTop="@+id/search_image"
            android:layout_alignBottom="@+id/search_image"
            android:layout_toLeftOf="@+id/search"
            />

        <ImageButton
            android:id="@+id/search_Enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/enter"
            android:layout_toRightOf="@+id/search"
            android:layout_alignBottom="@+id/search_image"
            android:layout_alignTop="@+id/search_image"
            />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/search_out_button"
        android:layout_width="57.9dp"
        android:layout_height="29dp"
        android:background="@drawable/pass_button"
        android:layout_marginEnd="150.8dp"
        android:layout_marginStart="151.3dp"
        android:layout_marginTop="450dp"
        app:layout_constraintTop_toTopOf="@+id/search_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</android.support.constraint.ConstraintLayout>