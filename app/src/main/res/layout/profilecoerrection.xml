<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        />

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="30dp"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/profilecorrection_outline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/profilecorrection_border"
                                android:gravity="center"
                                android:text="닉네임"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/nicname_correction"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="center"
                                android:text="hahaha"
                                android:textColor="#707070"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/profilecorrection_outline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/profilecorrection_border"
                                android:gravity="center"
                                android:text="E-mail"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/email_correction"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="center"
                                android:text="hahaha@naver.com"
                                android:textColor="#707070"
                                android:textSize="15sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/profilecorrection_outline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/profilecorrection_border"
                                android:gravity="center"
                                android:text="생년월일"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/year_month_day"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="center"
                                android:textColor="#707070"
                                android:text="20191118"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/profilecorrection_outline"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_passward_correction"
                                android:layout_width="320dp"
                                android:layout_height="match_parent"
                                android:text="비밀번호 수정"
                                android:textSize="18sp"
                                android:textColor="@android:color/darker_gray"
                                android:background="#E5EBF7"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/profilecorrection_outline"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/profilecorrection_border"
                                android:gravity="center"
                                android:text="발사이즈"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                            <Spinner
                                android:id="@+id/foot_size_correction"
                                style="?android:attr/spinnerItemStyle"
                                android:layout_width="200dp"
                                android:layout_height="35dp"
                                android:entries="@array/foot_size"
                                android:outlineAmbientShadowColor="@color/bootstrap_brand_danger"
                                android:outlineSpotShadowColor="@color/bootstrap_brand_info"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/information"
                                app:layout_constraintEnd_toEndOf="@+id/information"
                                app:layout_constraintHorizontal_bias="0.846"
                                app:layout_constraintStart_toStartOf="@+id/information"
                                app:layout_constraintTop_toTopOf="@+id/information"
                                app:layout_constraintVertical_bias="0.676" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/profilecorrection_outline">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/profilecorrection_border"
                                android:gravity="center"
                                android:text="발 볼"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                            <RadioGroup
                                android:id="@+id/foot_width_group_correction"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="@+id/information"
                                app:layout_constraintEnd_toEndOf="@+id/information"
                                app:layout_constraintHorizontal_bias="0.867"
                                app:layout_constraintStart_toStartOf="@+id/information"
                                app:layout_constraintTop_toTopOf="@+id/information"
                                app:layout_constraintVertical_bias="0.894">

                                <RadioButton
                                    android:id="@+id/small_foot"
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:text="좁은 편"
                                    android:textColor="#757070"
                                    android:textSize="10sp"
                                    tools:text="좁은 편" />

                                <RadioButton
                                    android:id="@+id/normal_foot"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:text="보통"
                                    android:textColor="#757070"
                                    android:textSize="10sp"
                                    tools:text="보통" />

                                <RadioButton
                                    android:id="@+id/bigger_foot"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:text="큰 편"
                                    android:textColor="#757070"
                                    android:textSize="10sp"
                                    tools:text="큰 편" />

                            </RadioGroup>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/profilecorrection_outline"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_correction"
                                android:layout_width="320dp"
                                android:layout_height="match_parent"
                                android:text="프로필 수정"
                                android:textSize="18sp"
                                android:textColor="@android:color/darker_gray"
                                android:background="#E5EBF7"/>

                        </LinearLayout>


                        <ListView
                            android:id="@+id/list_comments"
                            android:layout_width="360dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="50dp"
                            android:divider="@null">


                        </ListView>



                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <include layout="@layout/activity_drawer" />


</android.support.v4.widget.DrawerLayout>