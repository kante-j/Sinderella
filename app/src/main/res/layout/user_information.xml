<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <ImageView
        android:id="@+id/splash"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="56.5dp"
        android:layout_marginTop="72.5dp"
        android:layout_marginEnd="228.5dp"
        android:layout_marginBottom="492.5dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />


    <TextView
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_marginStart="131.5dp"
        android:layout_marginTop="86.5dp"
        android:layout_marginEnd="29.5dp"
        android:layout_marginBottom="513.5dp"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="10sp"
        android:textColor="#757070"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362"
        tools:text="회원정보 입력" />

    <ImageView
        android:id="@+id/information"
        android:layout_width="319dp"
        android:layout_height="247.5dp"
        android:layout_marginStart="20.5dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="20.5dp"
        android:layout_marginBottom="177.5dp"
        android:background="@drawable/input_information"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.511" />

    <RadioGroup
        android:layout_width="185dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/information"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toTopOf="@+id/information"
        app:layout_constraintVertical_bias="0.274"

        >

        <RadioButton
            android:id="@+id/man"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:textColor="#757070"
            android:textSize="15sp"
            tools:text="남자" />

        <RadioButton
            android:id="@+id/Weman"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:textColor="#757070"
            android:textSize="15sp"
            tools:text="여자" />

    </RadioGroup>

    <TextView
        android:id="@+id/IDname"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/information"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toTopOf="@+id/information"
        app:layout_constraintVertical_bias="0.109" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/information"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toTopOf="@+id/information">

        ﻿

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>