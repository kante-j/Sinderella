        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/splash"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="56.5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/logo"
            app:layout_constraintBottom_toTopOf="@+id/information"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원정보 입력"
            android:textColor="#757070"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/information"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/splash" />
    </LinearLayout>


    <ImageView
        android:id="@+id/information"
        android:layout_width="319dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_information"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.633" />

    <RadioGroup
        android:id="@+id/sex_group"
        android:layout_width="185dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/information"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toTopOf="@+id/information"
        app:layout_constraintVertical_bias="0.274"

        >

        <RadioButton
            android:id="@+id/man"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:text="남자"
            android:textColor="#757070"
            android:textSize="15sp"
            tools:text="남자" />

        <RadioButton
            android:id="@+id/woman"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:text="여자"
            android:textColor="#757070"
            android:textSize="15sp"
            tools:text="여자" />

    </RadioGroup>

    <EditText
        android:id="@+id/info_nickname"
        android:layout_width="179dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:hint="닉네임을 입력해주세요"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/information"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toTopOf="@+id/information"
        app:layout_constraintVertical_bias="0.048" />

