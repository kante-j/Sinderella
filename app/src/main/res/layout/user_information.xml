<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/logo_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="65dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/splash"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/logo_noletter" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/gyeonggititle_light"
                    android:text="회원정보 입력"
                    android:textColor="#757070"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nickname_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/nickname_box"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/gyeonggititle_bold"
                    android:gravity="center"
                    android:letterSpacing="0.06"
                    android:text="닉네임"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/info_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="닉네임을 입력해주세요"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sex_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/userinput_box"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/gyeonggititle_bold"
                    android:gravity="center"
                    android:letterSpacing="0.06"
                    android:text="성별"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/sex_group"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"

                    >

                    <RadioButton
                        android:id="@+id/man"
                        android:layout_width="61dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:lineSpacingExtra="5sp"
                        android:text="남자"
                        android:textColor="#757070"
                        android:textSize="15sp"
                        tools:text="남자" />

                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_width="61dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:lineSpacingExtra="5sp"
                        android:text="여자"
                        android:textColor="#757070"
                        android:textSize="15sp"
                        tools:text="여자" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/birth_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/userinput_box"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/gyeonggititle_bold"
                    android:gravity="center"
                    android:letterSpacing="0.06"
                    android:text="생년월일"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/birth_date"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/calendar" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/foot_size_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/userinput_box"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/gyeonggititle_bold"
                    android:gravity="center"
                    android:letterSpacing="0.06"
                    android:text="발사이즈"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/foot_size"
                    style="?android:attr/spinnerItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/foot_size"
                    android:outlineAmbientShadowColor="@color/bootstrap_brand_danger"
                    android:outlineSpotShadowColor="@color/bootstrap_brand_info"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/foot_width_box"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/feetwide_box"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:fontFamily="@font/gyeonggititle_bold"
                    android:gravity="center"
                    android:letterSpacing="0.06"
                    android:text="발볼"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/foot_width_group"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/small_foot"
                            android:layout_width="75dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/gyeonggititle_medium"
                            android:lineSpacingExtra="5sp"
                            android:text="좁은 편"
                            android:textColor="#757070"
                            android:textSize="12sp"
                            tools:text="좁은 편" />

                        <RadioButton
                            android:id="@+id/normal_foot"
                            android:layout_width="75dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/gyeonggititle_medium"
                            android:lineSpacingExtra="5sp"
                            android:text="보통"
                            android:textColor="#757070"
                            android:textSize="12sp"
                            tools:text="보통" />

                        <RadioButton
                            android:id="@+id/bigger_foot"
                            android:layout_width="75dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/gyeonggititle_medium"
                            android:lineSpacingExtra="5sp"
                            android:text="큰 편"
                            android:textColor="#757070"
                            android:textSize="12sp"
                            tools:text="큰 편" />

                    </RadioGroup>

                    <RadioButton
                        android:id="@+id/unknown"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/gyeonggititle_medium"
                        android:text="잘 모르겠다"
                        android:textColor="#757070"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_foot_width"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/check_foot_width_box"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/gyeonggititle_medium"
                    android:text=" 발 볼 측정을 위해 이 신발들 중 \n즐겨 신거나 맞았던 신발들을 골라주세요!"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/gyeonggititle_light"
                    android:text="* 만일 없다면 즐겨신었던 신발의 브랜드를 골라주세요!"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="12.5dp"
                    android:layout_marginEnd="3dp"
                    android:background="@null"
                    android:visibility="visible"
                    app:columnCount="3"
                    app:rowCount="3">

                    <CheckBox
                        android:id="@+id/nike_sample"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_margin="2.5dp"
                        android:background="@drawable/nike" />

                    <CheckBox
                        android:id="@+id/reebok_sample"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginTop="2.5dp"
                        android:background="@drawable/reebok" />

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:background="@drawable/adidas" />

                </android.support.v7.widget.GridLayout>

            </LinearLayout>

            <Button
                android:id="@+id/information_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/sign_up_button"
                android:fontFamily="@font/gyeonggititle_bold"
                android:letterSpacing="0.9"
                android:text="회원정보제출"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</android.support.v7.widget.LinearLayoutCompat>


