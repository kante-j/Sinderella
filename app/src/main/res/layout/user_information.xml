<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <ImageView
        android:id="@+id/splash"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="56.5dp"
        android:layout_marginTop="72.5dp"
        android:layout_marginEnd="228.5dp"
        android:layout_marginBottom="492.5dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_marginStart="131.5dp"
        android:layout_marginTop="86.5dp"
        android:layout_marginEnd="29.5dp"
        android:layout_marginBottom="513.5dp"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="10sp"
        android:textColor="#757070"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362"
        tools:text="회원정보 입력" />

    <ImageView
        android:id="@+id/information"
        android:layout_width="319dp"
        android:layout_height="247.5dp"
        android:layout_marginStart="20.5dp"
        android:layout_marginEnd="20.5dp"
        android:layout_marginBottom="177.5dp"
        android:background="@drawable/input_information"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.511" />

    <RadioGroup
        android:layout_width="185dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/information"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toTopOf="@+id/information"
        app:layout_constraintVertical_bias="0.274"

        >

        <RadioButton
            android:id="@+id/man"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:textColor="#757070"
            android:textSize="15sp"
            tools:text="남자" />

        <RadioButton
            android:id="@+id/Weman"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:textColor="#757070"
            android:textSize="15sp"
            tools:text="여자" />

    </RadioGroup>

    <EditText
        android:id="@+id/IDname"
        android:layout_width="178dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:hint="ID"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/information"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toTopOf="@+id/information"
        app:layout_constraintVertical_bias="0.048" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="180dp"
        android:layout_height="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/information"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toTopOf="@+id/information"
        app:layout_constraintVertical_bias="0.497">

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <Spinner
            android:id="@+id/spinner_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <Spinner
            android:id="@+id/spinner_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

    </LinearLayout>

    <EditText
        android:id="@+id/foot_size"
        android:layout_width="150dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/information"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toTopOf="@+id/information"
        app:layout_constraintVertical_bias="0.729" />

    <RadioGroup
        android:layout_width="185dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/information"
        app:layout_constraintEnd_toEndOf="@+id/information"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="@+id/information"
        app:layout_constraintTop_toTopOf="@+id/information"
        app:layout_constraintVertical_bias="0.894">

        <RadioButton
            android:id="@+id/small_foot"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:textColor="#757070"
            android:textSize="15sp"
            tools:text="좁은 편" />

        <RadioButton
            android:id="@+id/normal_foot"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:textColor="#757070"
            android:textSize="15sp"
            tools:text="보통" />

        <RadioButton
            android:id="@+id/bigger_foot"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:textColor="#757070"
            android:textSize="15sp"
            tools:text="큰 편" />

    </RadioGroup>


    <ImageButton
        android:id="@+id/information_button"
        android:layout_width="319dp"
        android:layout_height="44.5dp"
        android:layout_marginStart="20.5dp"
        android:layout_marginEnd="20.5dp"
        android:layout_marginBottom="117.5dp"
        android:background="@drawable/sign_up_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information" />





</android.support.constraint.ConstraintLayout>